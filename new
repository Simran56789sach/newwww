<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function(){
        $("#menu-toggle").click(function(){
            $("#sidebar").css("left", "0");
        });

        $("#close-sidebar").click(function(){
            $("#sidebar").css("left", "-250px");
        });
    });
</script>
